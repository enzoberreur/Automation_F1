                },
                {
                  "color": "green",
                  "value": 1
                }
              ]
            }
          }
        }
      },
      {
        "id": 26,
        "type": "stat",
        "title": "stream-processor up",
        "datasource": "Prometheus",
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 6,
          "y": 33
        },
        "targets": [
          {
            "expr": "up{job=\"stream-processor\"}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "red",
                  "value": null
                },
                {
                  "color": "green",
                  "value": 1
                }
              ]
            }
          }
        }
      },
      {
        "id": 27,
        "type": "stat",
        "title": "prometheus up",
        "datasource": "Prometheus",
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 12,
          "y": 33
        },
        "targets": [
          {
            "expr": "up{job=\"prometheus\"}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "red",
                  "value": null
                },
                {
                  "color": "green",
                  "value": 1
                }
              ]
            }
          }
        }
      },
      {
        "id": 28,
        "type": "stat",
        "title": "grafana up",
        "datasource": "Prometheus",
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 18,
          "y": 33
        },
        "targets": [
          {
            "expr": "up{job=\"grafana\"}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "red",
                  "value": null
                },
                {
                  "color": "green",
                  "value": 1
                }
              ]
            }
          }
        }
      }
    ]
  },
  "overwrite": true
}
