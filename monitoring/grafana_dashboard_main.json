          "h": 4,
          "w": 6,
          "x": 0,
          "y": 33
        },
        "targets": [
          {
            "expr": "up{job=\"sensor-simulator\"}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "red",
