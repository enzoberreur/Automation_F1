{
  "dashboard": {
    "id": null,
    "title": "Ferrari F1 IoT - Smart Pit Stop Monitoring Dashboard",
    "tags": ["ferrari", "f1", "iot", "telemetry"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "5s",
    "schemaVersion": 30,
    "version": 1,
    "time": {
      "from": "now-15m",
      "to": "now"
    },
    "timepicker": {},
    "templating": {
      "list": []
    },
    "annotations": {
      "list": []
    },
    "panels": [
      {
        "id": 1,
        "title": "Messages Ferrari F1 - Temps réel",
        "type": "stat",
        "gridPos": { "h": 8, "w": 6, "x": 0, "y": 0 },
        "targets": [
          {
            "expr": "sum(ferrari_messages_received_total)",
            "refId": "A",
            "legendFormat": "Messages reçus"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "thresholds" },
            "thresholds": {
              "steps": [
                { "color": "green", "value": null },
                { "color": "red", "value": 80 }
              ]
            }
          }
        },
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "orientation": "auto",
          "textMode": "auto",
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto"
        }
      },
      {
        "id": 2,
        "title": "Throughput Ferrari F1 (msg/sec)",
        "type": "stat",
        "gridPos": { "h": 8, "w": 6, "x": 6, "y": 0 },
        "targets": [
          {
            "expr": "ferrari_current_throughput_msg_per_sec",
            "refId": "A",
            "legendFormat": "Throughput"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "thresholds" },
            "thresholds": {
              "steps": [
                { "color": "red", "value": 0 },
                { "color": "yellow", "value": 50 },
                { "color": "green", "value": 100 }
              ]
            },
            "unit": "msg/sec"
          }
        },
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "orientation": "auto",
          "textMode": "auto",
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto"
        }
      },
      {
        "id": 3,
        "title": "Latence Moyenne (ms)",
        "type": "stat",
        "gridPos": { "h": 8, "w": 6, "x": 12, "y": 0 },
        "targets": [
          {
            "expr": "ferrari_avg_processing_latency_ms",
            "refId": "A",
            "legendFormat": "Latence"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "thresholds" },
            "thresholds": {
              "steps": [
                { "color": "green", "value": null },
                { "color": "yellow", "value": 5 },
                { "color": "red", "value": 10 }
              ]
            },
            "unit": "ms"
          }
        },
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "orientation": "auto",
          "textMode": "auto",
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto"
        }
      },
      {
        "id": 4,
        "title": "Score Pit Stop",
        "type": "stat",
        "gridPos": { "h": 8, "w": 6, "x": 18, "y": 0 },
        "targets": [
          {
            "expr": "ferrari_pitstop_score",
            "refId": "A",
            "legendFormat": "Score"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "thresholds" },
            "thresholds": {
              "steps": [
                { "color": "red", "value": 0 },
                { "color": "yellow", "value": 50 },
                { "color": "green", "value": 80 }
              ]
            },
            "max": 100,
            "min": 0
          }
        },
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "orientation": "auto",
          "textMode": "auto",
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto"
        }
      },
      {
        "id": 5,
        "title": "Messages Ferrari F1 - Évolution",
        "type": "timeseries",
        "gridPos": { "h": 9, "w": 12, "x": 0, "y": 8 },
        "targets": [
          {
            "expr": "rate(ferrari_messages_received_total[1m]) * 60",
            "refId": "A",
            "legendFormat": "Messages/minute"
          },
          {
            "expr": "rate(ferrari_simulator_messages_sent_total[1m]) * 60", 
            "refId": "B",
            "legendFormat": "Messages envoyés/minute"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "palette-classic" },
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "barAlignment": 0,
              "lineWidth": 1,
              "fillOpacity": 10,
              "gradientMode": "none",
              "spanNulls": false,
              "insertNulls": false,
              "showPoints": "never",
              "pointSize": 5,
              "stacking": { "mode": "none", "group": "A" },
              "axisPlacement": "auto",
              "axisLabel": "",
              "scaleDistribution": { "type": "linear" },
              "hideFrom": { "legend": false, "tooltip": false, "vis": false },
              "thresholdsStyle": { "mode": "off" }
            },
            "unit": "msg/min"
          }
        },
        "options": {
          "tooltip": { "mode": "single", "sort": "none" },
          "legend": { "displayMode": "visible", "placement": "bottom" }
        }
      },
      {
        "id": 6,
        "title": "Latence de traitement",
        "type": "timeseries",
        "gridPos": { "h": 9, "w": 12, "x": 12, "y": 8 },
        "targets": [
          {
            "expr": "histogram_quantile(0.50, sum(rate(ferrari_processing_latency_seconds_bucket[1m])) by (le)) * 1000",
            "refId": "A",
            "legendFormat": "P50"
          },
          {
            "expr": "histogram_quantile(0.95, sum(rate(ferrari_processing_latency_seconds_bucket[1m])) by (le)) * 1000",
            "refId": "B", 
            "legendFormat": "P95"
          },
          {
            "expr": "histogram_quantile(0.99, sum(rate(ferrari_processing_latency_seconds_bucket[1m])) by (le)) * 1000",
            "refId": "C",
            "legendFormat": "P99"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "palette-classic" },
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "barAlignment": 0,
              "lineWidth": 1,
              "fillOpacity": 10,
              "gradientMode": "none",
              "spanNulls": false,
              "insertNulls": false,
              "showPoints": "never",
              "pointSize": 5,
              "stacking": { "mode": "none", "group": "A" },
              "axisPlacement": "auto",
              "axisLabel": "",
              "scaleDistribution": { "type": "linear" },
              "hideFrom": { "legend": false, "tooltip": false, "vis": false },
              "thresholdsStyle": { "mode": "off" }
            },
            "unit": "ms"
          }
        },
        "options": {
          "tooltip": { "mode": "single", "sort": "none" },
          "legend": { "displayMode": "visible", "placement": "bottom" }
        }
      },
      {
        "id": 7,
        "title": "Anomalies Ferrari F1",
        "type": "stat",
        "gridPos": { "h": 4, "w": 8, "x": 0, "y": 17 },
        "targets": [
          {
            "expr": "ferrari_active_anomalies",
            "refId": "A",
            "legendFormat": "Anomalies actives"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "thresholds" },
            "thresholds": {
              "steps": [
                { "color": "green", "value": 0 },
                { "color": "yellow", "value": 1 },
                { "color": "red", "value": 5 }
              ]
            }
          }
        },
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "orientation": "auto",
          "textMode": "auto",
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto"
        }
      },
      {
        "id": 8,
        "title": "Recommandations Pit Stop",
        "type": "stat",
        "gridPos": { "h": 4, "w": 8, "x": 8, "y": 17 },
        "targets": [
          {
            "expr": "sum(ferrari_pitstop_recommendations_total)",
            "refId": "A",
            "legendFormat": "Recommandations"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "thresholds" },
            "thresholds": {
              "steps": [
                { "color": "green", "value": null },
                { "color": "red", "value": 80 }
              ]
            }
          }
        },
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "orientation": "auto",
          "textMode": "auto",
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto"
        }
      },
      {
        "id": 9,
        "title": "Throughput Simulator",
        "type": "stat",
        "gridPos": { "h": 4, "w": 8, "x": 16, "y": 17 },
        "targets": [
          {
            "expr": "ferrari_simulator_current_throughput_msg_per_sec",
            "refId": "A",
            "legendFormat": "Simulator msg/sec"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "thresholds" },
            "thresholds": {
              "steps": [
                { "color": "red", "value": 0 },
                { "color": "yellow", "value": 50 },
                { "color": "green", "value": 100 }
              ]
            },
            "unit": "msg/sec"
          }
        },
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "orientation": "auto",
          "textMode": "auto",
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto"
        }
      }
    ]
  },
  "overwrite": true
}