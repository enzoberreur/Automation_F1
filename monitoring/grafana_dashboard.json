{
  "dashboard": {
    "id": null,
    "title": "Ferrari F1 IoT - Smart Pit Stop Monitoring Dashboard",
    "tags": ["ferrari", "f1", "iot", "telemetry"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "5s",
    "schemaVersion": 30,
    "version": 1,
    "time": {
      "from": "now-15m",
      "to": "now"
    },
    "timepicker": {},
    "templating": {
      "list": []
    },
    "annotations": {
      "list": []
    },
    "panels": [
      {
        "id": 1,
        "title": "Messages Ferrari F1 - Temps r√©el",
        "type": "stat",
        "gridPos": { "h": 8, "w": 6, "x": 0, "y": 0 },
        "targets": [
          {
            "expr": "sum(ferrari_messages_received_total)",
            "refId": "A",
            "legendFormat": "Messages re√ßus"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "thresholds" },
            "thresholds": {
              "steps": [
                { "color": "green", "value": null },
                { "color": "red", "value": 80 }
              ]
            }
          }
        },
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "orientation": "auto",
          "textMode": "auto",
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto"
        }
      },
      {
        "id": 2,
        "title": "üö® System Thermal Load - Monitoring charge",
        "type": "gauge",
        "datasource": "prometheus",
        "gridPos": { "h": 8, "w": 6, "x": 6, "y": 0 },
        "targets": [
          {
            "expr": "max(ferrari_simulator_brake_temp_fl_celsius, ferrari_simulator_brake_temp_fr_celsius, ferrari_simulator_brake_temp_rl_celsius, ferrari_simulator_brake_temp_rr_celsius, ferrari_simulator_engine_temp_celsius)",
            "refId": "A",
            "legendFormat": "Max Thermal Load (¬∞C)"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "thresholds" },
            "thresholds": {
              "steps": [
                { "color": "red", "value": 0 },
                { "color": "yellow", "value": 50 },
                { "color": "green", "value": 100 }
              ]
            },
            "unit": "msg/sec"
          }
        },
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "orientation": "auto",
          "textMode": "auto",
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto"
        }
      },
      {
        "id": 3,
        "title": "üèÅ Performance Radar - Vue multidimensionnelle",
        "type": "piechart",
        "datasource": "prometheus",
        "gridPos": { "h": 8, "w": 6, "x": 12, "y": 0 },
        "targets": [
          {
            "expr": "min(100, ferrari_simulator_engine_temp_celsius / 120 * 100)",
            "refId": "A",
            "legendFormat": "üèéÔ∏è Engine Performance"
          },
          {
            "expr": "min(100, (100 - (max(ferrari_simulator_brake_temp_fl_celsius, ferrari_simulator_brake_temp_fr_celsius, ferrari_simulator_brake_temp_rl_celsius, ferrari_simulator_brake_temp_rr_celsius) - 100) / 5))",
            "refId": "B",
            "legendFormat": "üõë Brake Efficiency"
          },
          {
            "expr": "min(100, 120 - (avg(ferrari_simulator_tire_temp_fl_celsius, ferrari_simulator_tire_temp_fr_celsius, ferrari_simulator_tire_temp_rl_celsius, ferrari_simulator_tire_temp_rr_celsius) - 80))",
            "refId": "C",
            "legendFormat": "üèÅ Tire Performance"
          },
          {
            "expr": "min(100, ferrari_simulator_ers_power_kw / 1.5)",
            "refId": "D",
            "legendFormat": "‚ö° ERS Efficiency"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "thresholds" },
            "thresholds": {
              "steps": [
                { "color": "green", "value": null },
                { "color": "yellow", "value": 5 },
                { "color": "red", "value": 10 }
              ]
            },
            "unit": "ms"
          }
        },
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "orientation": "auto",
          "textMode": "auto",
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto"
        }
      },
      {
        "id": 4,
        "title": "üîÆ Predictive Pit-Stop - Strat√©gie intelligente",
        "type": "table",
        "datasource": "prometheus",
        "gridPos": { "h": 8, "w": 6, "x": 18, "y": 0 },
        "targets": [
          {
            "expr": "ferrari_pitstop_score",
            "format": "table",
            "refId": "A",
            "legendFormat": "Pitstop Score"
          },
          {
            "expr": "avg(ferrari_simulator_tire_wear_percent)",
            "format": "table",
            "refId": "B",
            "legendFormat": "Tire Wear"
          },
          {
            "expr": "avg(ferrari_simulator_brake_temp_fl_celsius)",
            "format": "table",
            "refId": "C",
            "legendFormat": "Brake Temp Avg"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "thresholds" },
            "thresholds": {
              "steps": [
                { "color": "red", "value": 0 },
                { "color": "yellow", "value": 50 },
                { "color": "green", "value": 80 }
              ]
            },
            "max": 100,
            "min": 0
          }
        },
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "orientation": "auto",
          "textMode": "auto",
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto"
        }
      },
      {
        "id": 5,
        "title": "üå°Ô∏è Thermal Performance Flow - Simulation temps r√©el",
        "type": "timeseries",
        "datasource": "prometheus",
        "gridPos": { "h": 9, "w": 12, "x": 0, "y": 8 },
        "targets": [
          {
            "expr": "ferrari_simulator_brake_temp_fl_celsius",
            "refId": "A",
            "legendFormat": "Brake Temp FL (¬∞C)"
          },
          {
            "expr": "ferrari_simulator_brake_temp_fr_celsius",
            "refId": "B",
            "legendFormat": "Brake Temp FR (¬∞C)"
          },
          {
            "expr": "ferrari_simulator_brake_temp_rl_celsius",
            "refId": "C",
            "legendFormat": "Brake Temp RL (¬∞C)"
          },
          {
            "expr": "ferrari_simulator_brake_temp_rr_celsius",
            "refId": "D",
            "legendFormat": "Brake Temp RR (¬∞C)"
          },
          {
            "expr": "ferrari_simulator_tire_temp_fl_celsius",
            "refId": "E",
            "legendFormat": "Tire Temp FL (¬∞C)"
          },
          {
            "expr": "ferrari_simulator_tire_temp_fr_celsius",
            "refId": "F",
            "legendFormat": "Tire Temp FR (¬∞C)"
          },
          {
            "expr": "ferrari_simulator_engine_temp_celsius",
            "refId": "G",
            "legendFormat": "Engine Temp (¬∞C)"
          },
          {
            "expr": "ferrari_simulator_speed_kmh",
            "refId": "H",
            "legendFormat": "Speed (km/h)"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "palette-classic" },
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "barAlignment": 0,
              "lineWidth": 1,
              "fillOpacity": 10,
              "gradientMode": "none",
              "spanNulls": false,
              "insertNulls": false,
              "showPoints": "never",
              "pointSize": 5,
              "stacking": { "mode": "none", "group": "A" },
              "axisPlacement": "auto",
              "axisLabel": "",
              "scaleDistribution": { "type": "linear" },
              "hideFrom": { "legend": false, "tooltip": false, "vis": false },
              "thresholdsStyle": { "mode": "off" }
            },
            "unit": "msg/min"
          }
        },
        "options": {
          "tooltip": { "mode": "single", "sort": "none" },
          "legend": { "displayMode": "visible", "placement": "bottom" }
        }
      },
      {
        "id": 6,
        "title": "‚ö° Energy Flow Heatmap - Flux √©nerg√©tique",
        "type": "heatmap",
        "datasource": "prometheus",
        "gridPos": { "h": 9, "w": 12, "x": 12, "y": 8 },
        "targets": [
          {
            "expr": "ferrari_simulator_ers_power_kw",
            "refId": "A",
            "legendFormat": "ERS Power (kW)"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "palette-classic" },
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "barAlignment": 0,
              "lineWidth": 1,
              "fillOpacity": 10,
              "gradientMode": "none",
              "spanNulls": false,
              "insertNulls": false,
              "showPoints": "never",
              "pointSize": 5,
              "stacking": { "mode": "none", "group": "A" },
              "axisPlacement": "auto",
              "axisLabel": "",
              "scaleDistribution": { "type": "linear" },
              "hideFrom": { "legend": false, "tooltip": false, "vis": false },
              "thresholdsStyle": { "mode": "off" }
            },
            "unit": "ms"
          }
        },
        "options": {
          "tooltip": { "mode": "single", "sort": "none" },
          "legend": { "displayMode": "visible", "placement": "bottom" }
        }
      },
      {
        "id": 7,
        "title": "Anomalies Ferrari F1",
        "type": "stat",
        "gridPos": { "h": 4, "w": 8, "x": 0, "y": 17 },
        "targets": [
          {
            "expr": "ferrari_active_anomalies",
            "refId": "A",
            "legendFormat": "Anomalies actives"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "thresholds" },
            "thresholds": {
              "steps": [
                { "color": "green", "value": 0 },
