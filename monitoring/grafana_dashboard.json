        ],
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "thresholds" },
            "thresholds": {
              "steps": [
                { "color": "green", "value": null },
                { "color": "red", "value": 80 }
              ]
            }
          }
        },
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "orientation": "auto",
          "textMode": "auto",
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto"
        }
      },
      {
        "id": 9,
        "title": "üìà Real-Time Efficiency Score - Global 0-100",
        "type": "gauge",
        "datasource": "prometheus",
        "gridPos": { "h": 4, "w": 8, "x": 16, "y": 17 },
        "targets": [
          {
            "expr": "((ferrari_simulator_current_throughput_msg_per_sec/20*25) + ((1 - (rate(ferrari_simulator_send_latency_seconds_sum[30s]) / rate(ferrari_simulator_send_latency_seconds_count[30s])))*25) + ((rate(ferrari_simulator_messages_sent_total[30s]) / rate(ferrari_simulator_messages_generated_total[30s]))*25) + 25)",
